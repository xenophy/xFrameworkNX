    var sayHi = function(name){
        console.log('Hi, ' + name);
    }
    
    sayHi('Fred');
    
    var sayHiToFriend = NX.createInterceptor(sayHi, function(name){
        return name == 'Brian';
    });
    
    sayHiToFriend('Fred');
    
